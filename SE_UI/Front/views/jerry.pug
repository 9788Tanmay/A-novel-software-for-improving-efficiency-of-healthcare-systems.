doctype html
html
   head
    style
      include style.css
    title= "Welcome to our database"
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css">
   body
      div(class="container")
        <center><div class='well'><b><h1>Patient Details</b></h1></div></center>
        table(class='table')
          thead
            tr(class='war')
            th      Sr_no                        
            th      Registration_ID               
            th      name                          
            th      Email                         
            th      sex                            
            th      Disease                        
            th      Age                           
          br
          br
          tbody
          each item in items
            tr(class='wars')
              td=item.Sr_no                     
              td=item.Registration_Id           
              td=item.name                      
              td=item.Email                     
              td=item.sex                    
              td=item.Disease                   
              td=item.Age                   
          br
          br